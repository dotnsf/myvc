
<style>
.dropdown-item-checked::before{
  position: absolute;
  left: .4rem;
  content: '*';
  font-weight: 600;
}
</style>
<nav class='navbar navbar-default'>
  <div class='container-fluid'>
    <div class='navbar-header'>
      <button type='button' class='nabvar-toggle collapsed' data-toggle='collapse' data-target='#navbar-global'>
        <span class='sr-only'>Toggle Navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <a class='navbar-brand' href='/'><%= __('nav.brandtitle') %></a>
    </div>
    <div class='collapse navbar-collapse' id='navbar-global'>
      <ul class='nav navbar-nav navbar-left'>
        <li class='dropdown'>
          <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button'><%= __('nav.menu.menu') %> <span class='caret'></span></a>
          <ul class='dropdown-menu' role='menu'>
<% if ( user.role == 0 || user.role == 2 ){ %>
            <li><a href='/users/list' id='menu_users'><%= __('nav.menu.users') %></a></li>
            <li><a href='/lockers/list' id='menu_lockers'><%= __('nav.menu.lockers') %></a></li>
            <li><a href='/vips/list' id='menu_vips'><%= __('nav.menu.vips') %></a></li>
            <li><a href='/items/list' id='menu_items'><%= __('nav.menu.items') %></a></li>
<% } %>
            <li><a href='/orders/list' id='menu_orders'><%= __('nav.menu.orders') %></a></li>
          </ul>
        </li>
      </ul>
<% if ( user ){ %>
      <ul class='nav navbar-nav navbar-right'>
        <li class='dropdown'>
          <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button'><%= user.name %> <span class='caret'></span></a>
          <ul class='dropdown-menu' role='menu'>
            <li><a href='javascript:logout();'><%= __('nav.menu.logout') %></a></li>
          </ul>
        </li>
      </ul>
<% } %>
    </div>
  </div>
</nav>
<script>
$(function(){
  var pathname = window.location.pathname;
  if( pathname.indexOf( '/users/list' ) > -1 ){
    $('#menu_users').addClass( 'dropdown-item-checked' );
  }else if( pathname.indexOf( '/lockers/list' ) > -1 ){
    $('#menu_lockers').addClass( 'dropdown-item-checked' );
  }else if( pathname.indexOf( '/vips/list' ) > -1 ){
    $('#menu_vips').addClass( 'dropdown-item-checked' );
  }else if( pathname.indexOf( '/items/list' ) > -1 ){
    $('#menu_items').addClass( 'dropdown-item-checked' );
  }else if( pathname.indexOf( '/order' ) == 0 ){
    $('#menu_orders').addClass( 'dropdown-item-checked' );
  }
});
</script>
