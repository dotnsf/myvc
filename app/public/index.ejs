<%- include('./header', {}) %>

<title><%= __('index.head.title') %></title>
<script>
$(function(){
<% if ( user.role == 0 ){ %>
  getUsers();
<% } %>
  getItems();
});

function logout(){
  $.ajax({
    type: 'POST',
    url: '/logout',
    data: {},
    success: function( data ){
      window.location.href = '/';
    },
    error: function(){
      window.location.href = '/';
    }
  });
}

function getUsers(){
  $.ajax({
    type: 'GET',
    url: '/users',
    success: function( users ){
      //users = JSON.parse( users );
      //console.log( users );
      users.forEach( user => {
        var tr = "<tr><td>" + user.id + "</td><td>********</td><td>" + user.name + "</td><td>" + abbreviateArray( user.email ) + "</td><td>" + user.role + "</td><td>" + user.created + "</td>";
        tr += "<td><input type='button' value='Delete' onClick='deleteUser(\"" + user.id + "\")'/></td>";
        tr += "</tr>";
        $('#users_table_tbody').append( tr );
      });
      var tr = "<tr>"
        + "<td><input type='text' id='user_id' placeholder='id'/></td>"
        + "<td><input type='password' id='user_password' placeholder='password'/></td>"
        + "<td><input type='text' id='user_name' placeholder='name'/></td>"
        + "<td><input type='text' id='user_email' placeholder='email'/></td>"
        + "<td><input type='text' id='user_role' placeholder='role'/></td>"
        + "<td><!-- <input type='text' id='user_created' placeholder='created'/> --> - </td>"
        + "<td><input type='button' value='Add/Update User' onClick='addUser();'/></td>"
        + "</tr>"
      $('#users_table_tbody').append( tr );
    },
    error: function( err ){
      console.log( err );
    }
  });
}

function addUser(){
  var id = $('#user_id').val();
  var password = $('#user_password').val();
  var name = $('#user_name').val();
  var email = $('#user_email').val();
  var role = $('#user_role').val();

  $.ajax({
    type: 'POST',
    url: '/user',
    data: { id: id, password: password, name: name, email: email, role: role },
    success: function( data ){
      window.location.href = '/';
    },
    error: function(){
      window.location.href = '/';
    }
  });
}

function deleteUser(id){
  console.log( 'deleteUser(): id=' + id );

  if( window.confirm( '<%= __('users.confirm.delete') %>' + id + ' ?' ) ){
    $.ajax({
      type: 'DELETE',
      url: '/user',
      data: { id: id },
      success: function( data ){
        window.location.href = '/';
      },
      error: function(){
        window.location.href = '/';
      }
    });
  }
}


function getItems(){
  $.ajax({
    type: 'GET',
    url: '/items',
    success: function( items ){
      console.log( items );
      items.forEach( item => {
        var owner_id = '';
        var n = item.owner.indexOf( '#' );
        if( n > -1 ){
          owner_id = item.owner.substring( n + 1, item.owner.length - 1 );
        }
        var tr = "<tr><td>" + item.id + "</td><td>" + item.name + "</td><td>" + item.body + "</td><td>" + item.amount + "</td><td>" + owner_id + "</td><td>" + item.modified + "</td>";
<% if ( user.role == 0 ){ %>
        tr += "<td><input type='button' value='Edit' onClick='editItem(" + JSON.stringify(item) + ")'/><input type='button' value='Delete' onClick='deleteItem(\"" + item.id + "\")'/></td>";
<% }else{ %>
        tr += "<td> -&gt; <input type='text' id='new_owner_id_for_" + item.id + "' value='' placeholder='new owner id'/><input type='button' value='Trade' onClick='tradeItem(" + JSON.stringify(item) + ")'/></td>";
<% } %>
        tr += "</tr>";
        $('#items_table_tbody').append( tr );
      });

      var tr = "<tr>"
      + "<td><input type='text' id='item_id' placeholder='id'/></td>"
      + "<td><input type='text' id='item_name' placeholder='name'/></td>"
      + "<td><input type='text' id='item_body' placeholder='body'/></td>"
      + "<td><input type='text' id='item_amount' placeholder='amount'/></td>"
      + "<td><!-- <input type='text' id='item_owner_id' placeholder='owner_id'/> --> (me) </td>"
      + "<td><!-- <input type='text' id='item_modified' placeholder='modified'/> --> - </td>"
      + "<td><input type='button' value='Add Item' onClick='addItem();'/></td>"
      + "</tr>"
      $('#items_table_tbody').append( tr );
    },
    error: function( err ){
      console.log( err );
    }
  });
}

function addItem(){
  var id = $('#item_id').val();
  var name = $('#item_name').val();
  var body = $('#item_body').val();
  var amount = $('#item_amount').val();
  var owner_id = $('#item_owner_id').val();

  $.ajax({
    type: 'POST',
    url: '/item',
    data: { id: id, name: name, body: body, amount: amount, owner_id: owner_id },
    success: function( data ){
      window.location.href = '/';
    },
    error: function(){
      window.location.href = '/';
    }
  });
}

function deleteItem(id){
  console.log( 'deleteItem(): id=' + id );

  if( window.confirm( '<%= __('items.confirm.delete') %>' + id + ' ?' ) ){
    $.ajax({
      type: 'DELETE',
      url: '/item',
      data: { id: id },
      success: function( data ){
        window.location.href = '/';
      },
      error: function(){
        window.location.href = '/';
      }
    });
  }
}

function editItem( item ){
  $('#item_id').val( item.id );
  $('#item_name').val( item.name );
  $('#item_body').val( item.body );
  $('#item_amount').val( item.amount );
}

function tradeItem( item ){
  if( window.confirm( '<%= __('items.confirm.trade') %>' + item.id + ' ?' ) ){
    var new_owner_id = $('#new_owner_id_for'+item.id).val();
    console.log( item.id + ' -> ' + new_owner_id );
    $.ajax({
      type: 'POST',
      url: '/trade',
      data: { item_id: item.id, user_id: new_owner_id },
      success: function( data ){
        window.location.href = '/';
      },
      error: function(){
        window.location.href = '/';
      }
    });
  }
}
</script>
